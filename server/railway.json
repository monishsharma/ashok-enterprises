{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "node server/index.js",
    "sleepApplication": false,
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "NEVER"
  },
  "crons": [
    {
      "name": "daily-job",
      "schedule": "0 0 * * *",
      "command": "node controller.js"
    }
  ]
}
