{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "sleepApplication": false,
    "restartPolicyType": "NEVER"
  },
  "crons": [
    {
      "name": "daily-job",
      "schedule": "0 0 * * *",
      "command": "node controller.js"
    }
  ]
}
